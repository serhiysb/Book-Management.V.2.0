<div class="modal fade" id="deleteModal_@ViewData["index"]" tabindex="-1" aria-labelledby="deleteModalForm" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Delete Book</h5>
            </div>
            <div class="modal-body">
                <p>Do yoo want to delete a @Model.Name?</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" >Close</button>
            </div>
        </div>
    </div>
</div>